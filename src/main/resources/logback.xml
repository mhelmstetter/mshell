<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Application logging -->
    <logger name="com.mongodb.mshell" level="WARN"/>
    
    <!-- MongoDB driver logging - very verbose, keep quiet -->
    <logger name="org.mongodb.driver" level="WARN"/>
    <logger name="com.mongodb" level="WARN"/>
    
    <!-- Other third-party libraries -->
    <logger name="org.graalvm" level="WARN"/>
    <logger name="org.mozilla.javascript" level="WARN"/>
    
    <!-- Root logger - keep at WARN to minimize noise -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>